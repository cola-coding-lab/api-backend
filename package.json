{
  "name": "cola-api-service",
  "version": "0.2.0",
  "description": "ReSTful API for CoLa Editor",
  "author": "Harald Schwab",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://mode.fh-joanneum.at/cola/editor/cola-api-service"
  },
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run clean:dist && tsc",
    "build:dev": "tsc --p tsconfig.dev.json",
    "clean:dist": "rm -rf dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "postbuild": "copyup -a \"src/{assets,public}/*\" -e \"**/.gitkeep\" dist",
    "prebuild": "npm run lint",
    "start": "node .",
    "start:dev": "nodemon",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --silent",
    "test:watch": "jest --watchAll --silent"
  },
  "_moduleAliases": {
    "@root": ".",
    "@app": "dist/app",
    "@assets": "dist/assets",
    "@config": "dist/config",
    "@controller": "dist/app/controller",
    "@middleware": "dist/app/middleware",
    "@model": "dist/app/model",
    "@routes": "dist/app/routes",
    "@util": "dist/util",
    "@pack": "package.json"
  },
  "keywords": [],
  "dependencies": {
    "binaryextensions": "^4.18.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "handlebars": "^4.7.7",
    "jszip": "^3.7.1",
    "module-alias": "^2.2.2",
    "sharp": "^0.29.1",
    "textextensions": "^5.14.0",
    "typescript-logging": "^1.0.0",
    "ws": "^8.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/eslint": "^7.28.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/sharp": "^0.29.2",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "jest": "^27.2.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  }
}
